# MongoDB connection
MONGODB_URI=mongodb+srv://username:password@your-cluster.mongodb.net/gazarental?retryWrites=true&w=majority

# API configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Application
NODE_ENV=development

# Vercel specific (for deployment)
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_ORG_ID=your-vercel-org-id

# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id

# Authentication
COOKIE_NAME=gazarental_auth
SECURE_COOKIES=false # Set to true in production and with HTTPS

# Next Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_key_here

# Google OAuth (if using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email Service 
EMAIL_SERVER_HOST=
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=
EMAIL_SERVER_PASSWORD=
EMAIL_FROM=

# Map Settings (OpenStreetMap - no API key needed)
MAP_DEFAULT_CENTER=-6.776,39.178
MAP_DEFAULT_ZOOM=13

# App Settings
NEXT_PUBLIC_SITE_URL=http://localhost:3000 